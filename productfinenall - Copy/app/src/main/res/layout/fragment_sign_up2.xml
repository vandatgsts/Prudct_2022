    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <Button
            android:id="@+id/button_phone_resigeter"
            android:layout_width="193dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_color"
            android:text="Phone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_email_register"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_color"
            android:text="Email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/button_phone_resigeter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.666" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_phone_email"
        android:layout_width="393dp"
        android:layout_height="387dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="OR"
        app:layout_constraintEnd_toEndOf="@+id/Next_of_Signup2"
        app:layout_constraintStart_toStartOf="@+id/Next_of_Signup2"
        app:layout_constraintTop_toBottomOf="@+id/layout_phone_email" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/input_border_gg"
        android:backgroundTint="#130C0C"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <Button
            android:id="@+id/Google_register"
            android:layout_width="290dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginEnd="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:layout_toEndOf="@id/ggimg"
            android:background="@color/white"
            android:gravity="center|center_horizontal"
            android:text="Continue as Google"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="32dp" />

        <ImageView
            android:id="@+id/ggimg"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1.5dp"
            android:layout_marginTop="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:background="@color/white"
            android:src="@drawable/google" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>